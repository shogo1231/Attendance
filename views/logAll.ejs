<%- include('./common/header') %>

    <%- include('./common/css') %>
    <link rel = 'stylesheet'  href = '../../attendance/static/public/log.css' />
  </head>

  <body>
    <%- include('./common/topBar') %>

    <div id = "wrap">
      <%- include('./common/side') %>

      <div id = "content">
        <!-- 画面タイトルと表示月切り替えボタンエリア -->
        <div class = "content-body">
          <div class = "staffname">社員名：<%= user[0].社員名 %></div>
          <input type = "hidden" name = "staffcode" value = "<%= user[0].社員コード %>">
          <h3></h3>
        </div>

        <div class = "button-area">
          <input type = "button" class = "lastMonth" value = "◀前月">
          <input type = "button" class = "nextMonth" value = "翌月▶">
        </div>

        <!-- 勤怠ログ表示エリア -->
        <div class = "reference-area">
          <table id="articletable">
            <thead>
              <tr>
                <th>出勤時刻</th>
                <th>退勤時刻</th>
                <th>残業時間</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <div class = "zangyo_total"></div>
        </div>
      </div>
    </div>

    <!-- モーダルウィンドウ -->
    <div class="modal-window">
      <div class = "close">X</div>
      <table id="allUser">
        <thead>
          <tr>
            <th>社員コード</th>
            <th>社員名</th>
            <th>選択</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>

    <!-- オーバーレイ -->
    <div id="overlay" class="overlay"></div>

    <%- include('./common/scripts') %>
    <script type = "text/javascript" src = '../../attendance/static/protected/common/side.js'></script>
    <script type = "text/javascript" src = '../../attendance/static/protected/logAll.js'></script>
  </body>
</html>